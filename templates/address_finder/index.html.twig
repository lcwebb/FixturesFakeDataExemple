{% extends 'base.html.twig' %}

{% block title %}Hello AddressFinderController!{% endblock %}

{% block body %}

    <div class="container m-4">
        {% for contact in contacts %}

            <div class="card shadow p-4 m-2">
                <div class="body">
                    <h5 class="card-title">
                        {{contact.name}} {{contact.firstname}}
                    </h5>
                    <p class="card-text">
                        {{contact.phone}}
                    </p>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}


